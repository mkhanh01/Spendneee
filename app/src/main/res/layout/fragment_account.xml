<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_account_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:id="@+id/fragment_account_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_account_linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bgr_account"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fragment_account_civ_avt"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        app:civ_border_color="@color/gray_200"
                        app:civ_border_width="1dp" />

                    <ImageView
                        android:id="@+id/fragment_account_iv_choose_avt"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="-65dp"
                        android:background="@drawable/bgr_camera"
                        android:padding="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_account_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:text="@string/username"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/fragment_account_tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="2"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fragment_account_rl_paybook"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_item">

                <ImageView
                    android:id="@+id/fragment_account_iv_paybook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_pay" />

                <TextView
                    android:id="@+id/fragment_account_tv_paybook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fragment_account_iv_paybook"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:text="@string/paybook"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignStart="@+id/fragment_account_iv_paybook"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="310dp"
                    android:drawableRight="@drawable/ic_forward" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_item">

                <ImageView
                    android:id="@+id/fragment_account_iv_receipt"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_widget" />

                <TextView
                    android:id="@+id/fragment_account_tv_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fragment_account_iv_receipt"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:text="@string/create_widget"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignStart="@+id/fragment_account_iv_receipt"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="310dp"
                    android:drawableRight="@drawable/ic_forward" />
            </RelativeLayout>

            <Button
                android:id="@+id/fragment_account_btn_logout"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:background="@drawable/custom_button"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>